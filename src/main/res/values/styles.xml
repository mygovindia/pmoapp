      </style>-->

    <style name="FeedbackNumberRatingBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:progressDrawable">@drawable/number_ratingbar</item>
        <item name="android:indeterminateDrawable">@drawable/number_ratingbar</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:maxHeight">48dp</item>
        <item name="android:max">5</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>


    <style name="CustomTweetStyleDark" parent="tw__TweetDarkWithActionsStyle">
        <item name="tw__primary_text_color">@android:color/white</item>
        <item name="tw__action_color">@android:color/white</item>
        <item name="tw__container_bg_color">@color/window_background_dark</item>
    </style>

    <style name="CustomTweetStyleLight" parent="tw__TweetLightWithActionsStyle">
        <item name="tw__container_bg_color">@color/window_background</item>
    </style>

    <style name="ThemeContactPicker" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="cp_actionIconSearch">@drawable/ic_search_white_24dp</item>
        <item name="cp_actionIconOK">@drawable/ic_done_white_24dp</item>
        <item name="cp_actionIconCheckAll">@drawable/ic_select_all_white_24dp</item>

        <item name="cp_textColorPrimary">@color/text_color_primary_light   </item>
