<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="15dp"
        android:layout_toLeftOf="@+id/thumbnail_frame"
        android:orientation="vertical">

        <com.sanskrit.pmo.Utils.TypefaceTextView
            android:id="@+id/feed_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/pocket_color_3"
            android:paddingLeft="12dp"
            android:paddingTop="5dp"
            android:paddingRight="12dp"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:text="Youtube"
            android:textColor="#ffffff"
            android:textSize="@dimen/feed_item_profile_name_2"
            android:textStyle="bold" />

        <com.sanskrit.pmo.Utils.TypefaceTextView
            android:id="@+id/feed_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/feed_item_profile_name_1"
            android:text="bjklghjg"
            android:textStyle="bold" />

        <com.sanskrit.pmo.Utils.TypefaceTextView
            android:id="@+id/feed_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="@dimen/feed_item_content" />

        <com.sanskrit.pmo.Utils.TypefaceTextView
            android:id="@+id/feed_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/thumbnail_frame"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#55000000" />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_play_circle_outline_white_24dp" />
    </FrameLayout>
</RelativeLayout>
