<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <com.sanskrit.pmo.Utils.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="5dp"
            android:maxLines="1"
            android:text="@string/filter_news"
            android:layout_toLeftOf="@+id/btn_save_filters"
            android:textColor="@color/black_grey"
            android:textSize="18sp" />

        <com.sanskrit.pmo.Utils.TypefaceTextView
            android:id="@+id/btn_save_filters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/border_textview_accent"
            android:padding="7dp"
            android:text="@string/save"
            android:textColor="@color/black_grey"
            android:textSize="18sp" />
    </RelativeLayout>

    <com.sanskrit.pmo.Utils.TypefaceTextView
        android:id="@+id/filters_recyclerview_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:padding="10dp"
        android:text="@string/news_filter_details"
        android:textColor="@color/black_grey"
        android:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:paddingTop="15dp" />
</LinearLayout>
