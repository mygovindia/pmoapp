<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDarkDarkTheme"
    android:orientation="vertical">


    <com.sanskrit.pmo.Utils.TouchImageView
        android:id="@+id/touch_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true" />

    <com.borjabravo.readmoretextview.ReadMoreTextView
        android:id="@+id/image_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="?actionBarSize"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        app:colorClickableText="@color/colorAccent"
        app:trimCollapsedText="View More"
        app:trimLines="3" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="@dimen/padding_normal"

        android:layout_marginBottom="@dimen/padding_normal"
        android:background="#0006000d"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_arrow_back_white_24dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/ic_file_download_black_24dp"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_share"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_share_white_24dp"
        app:layout_anchorGravity="bottom|left" />
</FrameLayout>
