<com.sanskrit.pmo.twitter.tweetui.TweetActionBarView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:twitter="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tw__tweet_action_bar"
    style="@style/tw__TweetFillWidth"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal"
    android:visibility="gone"
    tools:visibility="visible">

    <com.sanskrit.pmo.twitter.tweetui.ToggleImageButton
        android:id="@+id/tw__tweet_like_button"
        style="@style/tw__TweetActionButton.Heart"
        android:src="@drawable/tw__like_action"
        twitter:contentDescriptionOff="@string/tw__like_tweet"
        twitter:contentDescriptionOn="@string/tw__liked_tweet" />

    <TextView
        android:id="@+id/tw_tweet_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:textColor="#8899a6" />


    <com.sanskrit.pmo.twitter.tweetui.ToggleImageButton
        android:id="@+id/tw__tweet_retweet_button"
        style="@style/tw__TweetActionButton.Heart"
        android:contentDescription="Retweet"
        android:src="@drawable/tw_retweet_action" />

    <TextView
        android:id="@+id/tw_tweet_retweet_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:paddingTop="3dp"
        android:textColor="#8899a6" />

    <ImageButton
        android:id="@+id/tw__tweet_reply_button"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:background="@android:color/transparent"
        android:src="@drawable/twitter_reply" />

    <ImageButton
        android:id="@+id/tw__tweet_share_button"
        style="@style/tw__TweetActionButton.Share"
        android:contentDescription="@string/tw__share_tweet"
        android:src="@drawable/tw__share_action" />

</com.sanskrit.pmo.twitter.tweetui.TweetActionBarView>